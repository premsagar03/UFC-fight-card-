<body>

  <h1>UFC Fight Card Generator</h1>

  <form id="fightForm">
    <label for="fighter1Name">Fighter 1 Name</label>
    <input type="text" id="fighter1Name" required placeholder="Enter Fighter 1 Name" />

    <label for="fighter1Weight">Fighter 1 Weight Class</label>
    <select id="fighter1Weight" required>
      <option value="" disabled selected>Select Weight Class</option>
      <option>Flyweight</option>
      <option>Bantamweight</option>
      <option>Featherweight</option>
      <option>Lightweight</option>
      <option>Welterweight</option>
      <option>Middleweight</option>
      <option>Light Heavyweight</option>
      <option>Heavyweight</option>
    </select>

    <label for="fighter2Name">Fighter 2 Name</label>
    <input type="text" id="fighter2Name" required placeholder="Enter Fighter 2 Name" />

    <label for="fighter2Weight">Fighter 2 Weight Class</label>
    <select id="fighter2Weight" required>
      <option value="" disabled selected>Select Weight Class</option>
      <option>Flyweight</option>
      <option>Bantamweight</option>
      <option>Featherweight</option>
      <option>Lightweight</option>
      <option>Welterweight</option>
      <option>Middleweight</option>
      <option>Light Heavyweight</option>
      <option>Heavyweight</option>
    </select>

    <button type="submit">Add Fight</button>
  </form>

  <div class="fight-card" id="fightCard">
    <!-- Fights will appear here -->
  </div>

  <script>
    const fightForm = document.getElementById('fightForm');
    const fightCard = document.getElementById('fightCard');

    fightForm.addEventListener('submit', (e) => {
      e.preventDefault();

      const f1Name = document.getElementById('fighter1Name').value.trim();
      const f1Weight = document.getElementById('fighter1Weight').value;
      const f2Name = document.getElementById('fighter2Name').value.trim();
      const f2Weight = document.getElementById('fighter2Weight').value;

      // Validate that weight classes match
      if (f1Weight !== f2Weight) {
        alert('Both fighters must be in the same weight class!');
        return;
      }

      // Create fight element
      const fightElem = document.createElement('div');
      fightElem.classList.add('fight');

      fightElem.innerHTML = `
        <div class="fighter">
          <h3>${f1Name}</h3>
          <p>${f1Weight}</p>
        </div>
        <div class="vs">VS</div>
        <div class="fighter">
          <h3>${f2Name}</h3>
          <p>${f2Weight}</p>
        </div>
        <button class="remove-btn" title="Remove Fight">&times;</button>
      `;

      // Add remove functionality
      fightElem.querySelector('.remove-btn').addEventListener('click', () => {
        fightElem.remove();
      });

      fightCard.appendChild(fightElem);

      // Reset form
      fightForm.reset();
    });
  </script>

</body>
</html>


